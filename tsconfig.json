{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [ "ES2020" ],
        "module": "es2015",
        "rootDir": "src",
        "allowJs": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "paths": {
            "@types": ["./src/types"]
        }
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "**/node_modules"
    ]
}